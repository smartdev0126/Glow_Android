<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cmntView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="@dimen/_100sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/light_grey1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/like"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/bg_light_gray1"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/ic_like"
                    android:tint="@color/dark_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_toStartOf="@+id/like"
                    android:background="@drawable/bg_light_gray1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/comment_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Add comment"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:paddingStart="@dimen/_5sdp"
                        android:singleLine="true"
                        android:textSize="@dimen/_11sdp" />

                    <com.glowteam.CustomViews.CustomTextView
                        android:id="@+id/send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Send"
                        android:textColor="@color/textTitleColor"
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cmntView"
        android:background="@drawable/bg_white_corner"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/arrow"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_down_arrow"
            android:layout_width="@dimen/_35sdp"
            android:scaleType="fitXY"
            android:tint="@color/dark_grey"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_height="@dimen/_20sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/p_img"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <com.glowteam.CustomViews.CustomTextView
                    android:id="@+id/brand_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="assaas"
                    android:textColor="@color/textTitleColor"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="gone" />

                <com.glowteam.CustomViews.CustomTextView
                    android:id="@+id/p_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="assaas"
                    android:textColor="@color/textTitleColor"
                    android:textSize="@dimen/_14sdp" />

                <com.glowteam.CustomViews.CustomTextView
                    android:id="@+id/c_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:text="assaas"
                    android:textColor="@color/BlueViolet"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>


        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/cmntViewold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/_100sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/light_grey1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:id="@+id/like1"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/bg_light_gray1"
                        android:padding="@dimen/_6sdp"
                        android:src="@drawable/ic_like"
                        android:tint="@color/dark_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:layout_toStartOf="@+id/like1"
                        android:background="@drawable/bg_light_gray1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/comment_txt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/transparent"
                            android:hint="Add comment"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:paddingStart="@dimen/_5sdp"
                            android:singleLine="true"
                            android:textSize="@dimen/_11sdp" />

                        <com.glowteam.CustomViews.CustomTextView
                            android:id="@+id/send1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="Send"
                            android:textColor="@color/textTitleColor"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/light_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <com.glowteam.CustomViews.CustomTextView
                android:id="@+id/buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/border_light_grey"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Buy"
                android:textColor="@color/black" />

            <com.glowteam.CustomViews.CustomTextView
                android:id="@+id/my_shelf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/border_light_grey"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="+ My Shelf"
                android:textColor="@color/black" />

            <com.glowteam.CustomViews.CustomTextView
                android:id="@+id/wish_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/border_light_grey"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="+ Wish List"
                android:textColor="@color/black" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/commentsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp" />
    </LinearLayout>

</RelativeLayout>